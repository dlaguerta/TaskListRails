<h1> Welcome, <%= @user.name %> </h1>
<h4><%= link_to "Add a new task!", new_task_path %></h4>

<ul>
  <% @list_of_tasks.each do |task|  %>
  <li>
    <%= link_to("#{task.name}", task_path(task.id)) %>

    <br><b><%= task.task_status %></b>
    <br><% if task.completion_status == false %>
    <%= button_to "Mark Complete", task_finished_path(task.id),  method: :patch %>
    <%end %>


    <br><%= link_to "Edit Task", edit_task_path(task.id) %>
    <br><%= link_to "Delete task", task_path(task.id),
    method: :delete,
    data: { confirm: 'Are you sure you want to delete this task?'} %>

  </li>
  <br>
  <% end %>
</ul>

<br><%= link_to "Add a new task!", new_task_path %>
